{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "no-irregular-whitespace": 1,
    "indent": ["error", 4, {"SwitchCase": 1, "MemberExpression": 1}],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "no-unused-vars": [
            1,
            {
                "vars": "local",
                "args": "none",
                "varsIgnorePattern": "Bootstrap"
            }
        ]},
        "no-use-before-define": [
            2,
            {
                "functions": false,
                "classes": true
            }
        ],
        "no-undef": 2,
  "plugins": [
    "react"
  ]
}
